{
  "name": "remoa-desktop",
  "version": "1.0.0",
  "description": "A simple desktop app with clean interface",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "start-with-ollama": "./start-ollama.sh && npm start",
    "build": "electron-builder --config ../electron-builder-config.js",
    "build-mac": "electron-builder --mac --config ../electron-builder-config.js",
    "build-win": "electron-builder --win --config ../electron-builder-config.js",
    "build-linux": "electron-builder --linux --config ../electron-builder-config.js",
    "dist": "electron-builder --publish=never --config ../electron-builder-config.js",
    "package": "../package-app.sh"
  },
  "keywords": [
    "desktop",
    "electron",
    "app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.remoa.desktop",
    "productName": "REMOAI Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
